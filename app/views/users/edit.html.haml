= content_for(:title, t('settings.settings') + ' | ')
%main.container
  %h1.general-title-margin= t('settings.settings')
  %ul.nav.clearfix.mb-20{role: "tablist"}
    %li.tab-item.active{role: "presentation"}
      %a.tab-link{href: "#address", 'aria-controls': "address", role: "tab", 'data-toggle': "tab"}= t('settings.address')
    %li.tab-item#privacy_tab{role: "presentation"}
      %a.tab-link{href: "#privacy", 'aria-controls': "privacy", role: "tab", 'data-toggle': "tab"}= t('settings.privacy')
  .tab-content
    .general-main-wrap#address.tab-pane.fade.in.active{role: "tabpanel"}
      %form
        .hidden-xs.hidden-sm
          .row
            .col-md-5
              %h3.general-subtitle.mt-0= t('settings.billing')
            .col-md-5
              %h3.general-subtitle.mt-0= t('settings.shipping')

      .row
        .col-md-5.mb-40
          .visible-xs.visible-sm
            %h3.general-subtitle.mt-0= t("settings.billing")
          = render 'settings/address', address: :billing, builder: @billing_builder

        .col-md-5.mb-40
          .visible-xs.visible-sm
            %h3.general-subtitle.mt-0= t("settings.shipping")
          = render 'settings/address', address: :shipping, builder: @shipping_builder

    #privacy.tab-pane.fade{role: "tabpanel"}
      .row.mb-60
        = render partial: 'settings/privacy'
