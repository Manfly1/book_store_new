= content_for(:title, t('order.checkout'))
%main.container.general-main-wrap
  %h1.general-title-margin= t('order.checkout')
  = render 'progress_bar'

  .text-center.mb-40
    %h3.general-subtitle= t('checkout.thanks')
    %p.fw-300= t('checkout.confirmation', email: current_user.email)
  
  .row.mb-20

    .col-sm-3
      = render 'address_info', address: current_user.billing, address_title: t('settings.billing')
    .col-sm-3
      = render 'address_info', address: current_user.shipping, address_title: t('settings.shipping')

    .col-sm-6.hidden-xs.text-right
      %p.general-order-number.mb-0= current_order.number
      %p.general-address.mb-30= current_order.updated_at
  
  = render 'order_items'

  .text-center.general-text-right
    = render 'order_summary'

  .text-center
    = button_to t('checkout.back_to_store'), root_path, method: :get, class: 'btn btn-default mb-20'
